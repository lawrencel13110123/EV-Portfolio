<nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><a href="/#home-page" id="dash-home">///</a></li>
    </ul>
     <ul class="nav navbar-nav" style="float: right;">
      <li><a href="/logout" id="logout-btn"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
    </ul>
  </div>
</nav>

<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<div class="panel panel-default equal">
			  <div class="panel-heading">New Project</div>
			  <div class="panel-body">
			  	<div class="text-center">
					<a data-toggle="modal" data-target="#add-modal"><i class="fa fa-plus" id="add-btn" aria-hidden="true"></i></a>
				</div>
			  </div>
			</div>
		</div>

		<div id="add-modal" class="modal fade" role="dialog">
			  <div class="modal-dialog">

			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">New Project</h4>
			      </div>
			      <div class="modal-body">

					<form class="form-horizontal" action="/create" method="POST">
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="title">Title:</label>
					      <div class="col-lg-10">
					        <textarea class="form-control" id="title" name="title" rows="1"></textarea>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="about">About:</label>
					      <div class="col-lg-10">          
					        <textarea class="form-control" id="about" name="about" rows="10"></textarea>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="logo">Logo:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="logo" name="logo">
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgOne">Image 1:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgOne" name="imgOne">
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgTwo">Image 2:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgTwo" name="imgTwo">
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgThree">Image 3:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgThree" name="imgThree">
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgFour">Image 4:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgFour" name="imgFour">
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgFive">Image 5:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgFive" name="imgFive">
					      </div>
					    </div>
					    
					    <div class="form-group">        
					      <div class="col-sm-offset-2 col-sm-10">
					        <button type="submit" class="btn btn-default" id="form-btn">Submit</button>
					      </div>
					    </div>
					</form>

			      </div>
			    </div>
			  </div>
			</div>

		{{#each project}}
			<div class="col-lg-4">
				<div class="panel panel-default equal">
				  <div class="panel-heading">{{title}}</div>
				  <div class="panel-body">
				  	<div class="text-center">
						<img src={{logo}} class="panel-img">
					</div>
					<p>{{breaklines about}}</p>
					<div class="action-icons-bar">
						<a href="/delete/{{_id}}" class="action-icons" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
						<a class="action-icons" data-toggle="modal" data-target=#{{id}}><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
					</div>
				  </div>
				</div>
			</div>

			<div id={{id}} class="modal fade" role="dialog">
			  <div class="modal-dialog">

			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">{{title}}</h4>
			      </div>
			      <div class="modal-body">

					<form class="form-horizontal" action="/update/{{id}}" method="POST">
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="title">Title:</label>
					      <div class="col-lg-10">
					        <textarea class="form-control" id="title" name="title" rows="1">{{title}}</textarea>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="about">About:</label>
					      <div class="col-lg-10">          
					        <textarea class="form-control" id="about" name="about" rows="10">{{about}}</textarea>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="logo">Logo:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="logo" name="logo" value={{logo}}>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgOne">Image 1:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgOne" name="imgOne" value={{imgOne}}>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgTwo">Image 2:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgTwo" name="imgTwo" value={{imgTwo}}>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgThree">Image 3:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgThree" name="imgThree" value={{imgThree}}>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgFour">Image 4:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgFour" name="imgFour" value={{imgFour}}>
					      </div>
					    </div>
					    <div class="form-group">
					      <label class="control-label col-lg-2" for="imgFive">Image 5:</label>
					      <div class="col-lg-10">
					        <input type="url" class="form-control" id="imgFive" name="imgFive" value={{imgFive}}>
					      </div>
					    </div>
					    
					    <div class="form-group">        
					      <div class="col-sm-offset-2 col-sm-10">
					        <button type="submit" class="btn btn-default" id="form-btn">Submit</button>
					      </div>
					    </div>
					</form>

			      </div>
			    </div>
			  </div>
			</div>
		{{/each}}
	
	</div>
</div>